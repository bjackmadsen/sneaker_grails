<h1>ADD A SHOE STYLE</h1>

<%= render('layouts/errors', :object => @style) %>

<ul>
	<% @styles.each do |style| %>
		<li><a href="/styles/<%= style.id %>"><%= style.name %></a></li>
	<% end %>
</ul>

<form action="/styles/<%= @style.id %>" method="post">
  <%= render('form') %>
  <button>Add</button>
</form>
	
