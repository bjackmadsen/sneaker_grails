<label>Choose a Brand</label>

<select name="style[brand_id]">
	<% @brands.each do |brand| %>
		<option value="<%= brand.id %>"><%= brand.name %></option>
	<% end %>
</select><br>

<label for="style_name">Style Name:</label>
<input id="style_name" name="style[name]" type="text" value="<% @style.name %>"><br>
<label for="style_color">Color:</label>
<input id="style_color" name="style[color]" type="text" value="<% @style.color %>"><br>
<label for="style_release_date">Release Date:</label>
<input id="style_release_date" name="style[release_date]" type="text" value="<% @style.release_date %>"><br>
<label for="style_price">Average Selling Price:</label>
<input id="style_price" name="style[price]" type="text" value="<% @style.price %>"><br>
<label for="style_content">Info:</label>
<input id="style_content" name="style[content]" type="text" value="<% @style.content %>"><br>


<p><a href="/brands">Return to home page</a></p>