<%= render('layouts/errors', :object => @style) %>

<label>Choose a Brand</label>


<%= form_for @style, :html => { :multipart => true} do |f| %>
	
	<%= f.select(:brand_id, Brand.all.collect {|brand| [ brand.name, brand.id ] }, {:include_blank => "Choose A Brand", :default => nil} ) %><br><br>

	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, :class => "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :color %>
		<%= f.text_field :color, :class => "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :release_date %>
		<%= f.text_field :release_date, :class => "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :price %>
		<%= f.text_field :price, :class => "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :content %>
		<%= f.text_field :content, :class => "form-control" %>
	</div>
	<div class="form-group">
		<%= f.file_field :photo %>
	</div>
	<%= f.submit(:class => "btn btn-success btn") %>
<% end %>

<p><%= link_to "Return home", brands_path %></p>

