<h1><%= @style.brand.name %></h1>

<h2><%= @style.name %></h2>
<p>Color: <%= @style.color %></p>
<p>Release Date: <%= @style.release_date %></p>
<p>Average Selling Price: <%= @style.price %></p>
<p>Info: <%= @style.content %></p>

<% if @style.errors.any? %>
	<h3>Please fix these errors:</h3>
	<ul>
		<% @style.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		<% end %>
	</ul>
<% end %>

<form action="/styles/<%= @style.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <%= render('form') %>
  <button>Update</button>
</form>