<h1>ADD A SHOE BRAND</h1>

<h2>Current brands:</h2>

<%= render('layouts/errors', :object => @brand) %>

<ul>
	<% @brands.each do |brand| %>
		<li><%= brand.name %></li>
	<% end %>
</ul>

<form action="/brands" method="post">
<label for="brand_name">Name</label>
<input id="brand_name" name="brand[name]" type="text" value="<% @brand.name %>">
<button class="btn btn-success btn">Create Brand</button>
</form>

<p><a href="/">Return home</a></p>
