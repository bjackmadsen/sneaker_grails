<h1><%= @brand.name %></h1>

<h4>List of grails:</h4>
<ul>
	<% @brand.styles.each do |style| %>
		<li><a href="/styles/<%= style.id %>"><%= style.name %></a></li>
	<% end %>
</ul>

<p><a href="/styles/new" class="btn btn-success btn">Add a grail</a></p>
<p><a href="/brands/<%= @brand.id %>"
      data-confirm="Are you sure you want to delete <%= @brand.name %>, and all of it's styles?"
      data-method="delete"
      rel="nofollow" class="btn btn-primary btn">Delete this Brand</a></p>


<p><a href="/">Return home</a></p>